<div class="post-metadata">
  <%= avatar_for post.user, size: 40 %>
  <div class="post-info">
    <%= react_component("PopoverLink", { user_id: post.user.id, url: user_path(post.user), children: post.username }) %>
    <% if I18n.locale.to_s == "en" %>
      <small><%= time_ago_in_words(post.created_at) %> ago &#149; <%= post_length_in_minutes(post.body) %></small>
    <% end %>
    <% if I18n.locale.to_s == "fr" %>
      <small> il y'a <%= time_ago_in_words(post.created_at) %> &#149; <%= post_length_in_minutes(post.body) %></small>
    <% end %>
  </div>
</div>
